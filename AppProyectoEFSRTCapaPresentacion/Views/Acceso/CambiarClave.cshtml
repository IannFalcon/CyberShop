
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CambiarClave</title>
    <link href="~/Content/login.css" rel="stylesheet" />
</head>
<body>
    <div class="contenedor">
        <div class="contenedor_form">
            <form action="@Url.Action("CambiarClave", "Acceso")" method="post">

                <input class="form-control" name="idcliente" value="@TempData["IdCliente"]" type="hidden" />

                <h1>CAMBIAR CONTRASEÑA</h1>

                <hr>

                <div class="ctn_input">
                    <label for="inputNowPassword">Ingresa tu contraseña actual:</label>
                    <input id="inputNowPassword" name="claveactual" type="password" placeholder="Ingresa tu contraseña actual" />
                </div>

                <div class="ctn_input">
                    <label for="inputNewPassword">Ingresa tu nueva contraseña:</label>
                    <input id="inputNewPassword" name="nuevaclave" type="password" placeholder="Ingresa tu nueva contraseña" />
                </div>

                <div class="ctn_input">
                    <label for="inputPassword">Confirmar contraseña:</label>
                    <input id="inputPassword" name="confirmarclave" type="password" placeholder="Confirmar nueva contraseña" />
                </div>

                @{
                    if (ViewBag.Error != null)
                    {
                        <div class="ctn_error">
                            @ViewBag.Error
                        </div>
                    }
                }

                <div class="ctn_button">
                    <button type="submit">Cambiar contraseña</button>
                    <a class="olvidaste_clave" href="@Url.Action("LoginCliente", "Acceso")">Volver al inicio</a>
                </div>

            </form>
        </div>
    </div>

    <script src="~/Scripts/bootstrap.bundle.js"></script>
</body>
</html>
