
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/login.css" rel="stylesheet" />
</head>
<body>

    <div class="contenedor">
        <div class="contenedor_form">
            <form action="@Url.Action("Login", "Acceso")" method="post">

                <h1>LOGIN</h1>

                <div class="ctn_input">
                    <label for="inputEmail">Correo:</label>
                    <input id="inputEmail" name="correo" type="email" placeholder="Ejemplo@cybershop.com" />
                </div>

                <div class="ctn_input">
                    <label for="inputPassword">Contraseña:</label>
                    <input id="inputPassword" name="clave" type="password" placeholder="Ingresa tu contraseña" />
                </div>

                @{
                    if (ViewBag.Error != null)
                    {
                        <div class="ctn_error">
                            @ViewBag.Error
                        </div>
                    }
                }

                <div class="ctn_button">
                    <button type="submit">Iniciar Sesion</button>
                    <a class="olvidaste_clave" href="@Url.Action("Reestablecer", "Acceso")">¿Olvidaste tu contraseña?</a>
                </div>

            </form>
        </div>
    </div>

    <script src="~/Scripts/bootstrap.bundle.js"></script>

</body>
</html>
